{
  "browserSyncOptions" : {
    "proxy": "localhost/wordpress/",
    "notify": false
  },
  "browserSyncWatchFiles" : [
    "./assets/dist/css/*.min.css",
    "./assets/dist/js/*.min.js",
    "./**/*.php"
  ],
  "paths" : {
    "js": "./assets/dist/js",
    "css": "./assets/dist/css",
    "sass": "./assets/src/sass",
    "img": "./assets/images",
    "node": "./node_modules/",
    "bower": "./bower_components/",
    "dev": "./assets/src",
    "dist": "./assets/dist",
    "vendor": "./assets/vendor"
  }
}
